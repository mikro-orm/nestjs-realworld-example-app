{
  "name": "nestjs-realworld-example-app",
  "version": "1.0.0",
  "description": "NestJS + MikroORM realworld API example (MySQL)",
  "homepage": "https://github.com/mikro-orm/nestjs-realworld-example-app#readme",
  "bugs": {
    "url": "https://github.com/mikro-orm/nestjs-realworld-example-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikro-orm/nestjs-realworld-example-app.git"
  },
  "author": "banan23@gmail.com",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "tsc-check-tests": "tsc --noEmit --project tests/tsconfig.json",
    "format": "oxfmt --write .",
    "lint": "oxlint --type-aware",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:e2e": "APIURL=http://localhost:3000/api ./e2e/run-api-tests.sh"
  },
  "dependencies": {
    "@mikro-orm/core": "^7.0.0-dev.109",
    "@mikro-orm/decorators": "^7.0.0-dev.109",
    "@mikro-orm/entity-generator": "^7.0.0-dev.109",
    "@mikro-orm/migrations": "^7.0.0-dev.109",
    "@mikro-orm/mysql": "^7.0.0-dev.109",
    "@mikro-orm/nestjs": "^7.0.0-dev.1",
    "@mikro-orm/reflection": "^7.0.0-dev.109",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs/common": "^11.0.6",
    "@nestjs/core": "^11.0.6",
    "@nestjs/platform-express": "^11.0.6",
    "@nestjs/swagger": "^11.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "crypto": "^1.0.1",
    "crypto-js": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "slug": "^9.0.0",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^7.0.0-dev.109",
    "@mikro-orm/seeder": "^7.0.0-dev.109",
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.6",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "^1.15.3",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.0.0",
    "@types/slug": "^5.0.8",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "atob": ">=2.1.2",
    "deep-extend": ">=0.6.0",
    "extend": ">=3.0.2",
    "oxfmt": "^0.18.0",
    "oxlint": "^1.33.0",
    "oxlint-tsgolint": "^0.9.1",
    "supertest": "^7.0.0",
    "typescript": "5.9.3",
    "unplugin-swc": "^1.5.9",
    "vitest": "^4.0.16"
  },
  "packageManager": "yarn@4.12.0",
  "renovate": {
    "extends": [
      "config:base",
      ":preserveSemverRanges",
      ":semanticCommitTypeAll(chore)"
    ],
    "semanticCommits": "enabled",
    "separateMajorMinor": false,
    "dependencyDashboard": false,
    "lockFileMaintenance": {
      "enabled": true,
      "schedule": [
        "before 2am"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    "packageRules": [
      {
        "matchUpdateTypes": [
          "patch",
          "minor"
        ],
        "groupName": "patch/minor dependencies",
        "groupSlug": "all-non-major",
        "automerge": true,
        "automergeType": "branch"
      }
    ],
    "schedule": [
      "every weekday"
    ]
  }
}
